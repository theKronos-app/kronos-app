{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "kronos-app",
	"version": "0.1.0",
	"identifier": "com.kronos-app.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "kronos",
				"width": 800,
				"height": 600,
				"resizable": true,
				"maximizable": true,
				"minimizable": true,
				"closable": true,
				"decorations": true,
				"transparent": false,
				"alwaysOnTop": false,
				"visible": true,
				"theme": "Dark",
				"titleBarStyle": "Overlay",
				"userAgent": "Kronos App",
				"focus": true,
				"skipTaskbar": false,
				"fullscreen": false,
				"shadow": true,
				"zoomHotkeysEnabled": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
	}
}
